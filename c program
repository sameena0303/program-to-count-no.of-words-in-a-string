#include <stdio.h>
#include <string.h>
int main()
{
    char str1[1000];  
    int i,count=0,words;
    printf("Enter the string : ");
    gets(str1);
    for(i=0;str1[i];i++)  
    {
        if(str1[i]==' ')
        count++;
 	}
 	if(i>0)
 	count++;
    printf("no of words= %d\n",count);
    return 0;
}
